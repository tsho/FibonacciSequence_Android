<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/javaTimerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/javaTimerLabel"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="24sp"
            android:layout_weight="0.4"/>
        <TextView
            android:id="@+id/javacount_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/javacount_result"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.6"
            android:textSize="24sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/javacount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/javacount"
            android:textSize="24sp"
            android:onClick="startTimer"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/ccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ccount"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/counttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ccounttime"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="24sp"
            />
    </LinearLayout>

</LinearLayout>
